<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebackground"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="193dp"
        android:layout_height="153dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/byteme" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:fontFamily="cursive"
        android:text="SIGN UP"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="26dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginBottom="251dp"
        app:srcCompat="@drawable/usericon" />

    <EditText
        android:id="@+id/usernameTextBox"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="243dp"
        android:ems="10"
        android:hint="User Name"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="26dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="187dp"
        app:srcCompat="@drawable/emailicon"
        android:layout_alignRight="@+id/imageView2" />

    <EditText
        android:id="@+id/emailTextbox"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/usernameTextBox"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="-2dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:layout_alignLeft="@+id/usernameTextBox"
        android:layout_marginLeft="1dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="33dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="142dp"
        android:layout_toStartOf="@+id/usernameTextBox"
        app:srcCompat="@drawable/passwordicon"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/usernameTextBox" />

    <EditText
        android:id="@+id/passwordTextBox"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailTextbox"
        android:layout_alignLeft="@+id/emailTextbox"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="128dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="122dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:layout_marginBottom="77dp"
        android:background="@drawable/signuproundbutton"
        android:text="Sign Up"
        android:textColor="#ffff"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailTextbox"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="49dp"
        android:text="Already have an account?"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/emailTextbox"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/signUpButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-77dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:background="@android:color/transparent"
        android:text="Sign In"
        android:textColor="#1b9af7" />

</RelativeLayout>