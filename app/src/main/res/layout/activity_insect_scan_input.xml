<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".InsectScanInput">

    <Button
        android:id="@+id/button27"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="#86e2e9"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        app:srcCompat="@drawable/honeybee" />

    <Button
        android:id="@+id/scanInsectButton"
        android:layout_width="141dp"
        android:layout_height="56dp"
        android:layout_alignLeft="@+id/imageView15"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="99dp"
        android:layout_marginBottom="231dp"
        android:background="#1b9af7"
        android:text="Scan Insect"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button29"
        android:layout_width="141dp"
        android:layout_height="56dp"
        android:layout_alignTop="@+id/scanInsectButton"
        android:layout_alignRight="@+id/imageView15"
        android:layout_marginTop="1dp"
        android:layout_marginRight="107dp"
        android:background="#1b9af7"
        android:text="Upload Image"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/medicalbackground"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp" />



</RelativeLayout>